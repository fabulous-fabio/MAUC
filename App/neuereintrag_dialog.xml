<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="16dp">

	<EditText
		android:id="@+id/editTextName"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="Benutzername" />

	<TextView
		android:id="@+id/dialogLabelGeburtstagDatum"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:hint="Datum" />

	<Button
		android:id="@+id/buttonGeburtstag"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:text="Datum wÃ¤hlen" />

	<EditText
		android:id="@+id/editTextMessintervall"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:hint="Messintervall" />

	<EditText
		android:id="@+id/editTextPuls"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:hint="Puls" />

	<EditText
		android:id="@+id/editTextBlutsauerstoff"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:hint="Blutsauerstoff" />

	<Button
		android:id="@+id/buttonOK"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:text="OK" />

	<Button
		android:id="@+id/buttonAbbrechen"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:text="Abbrechen" />

</LinearLayout>
